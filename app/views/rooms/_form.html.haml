= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :'Room Number'
    = f.text_field :number
  .field
    = f.label :building
    = f.text_field :build
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :time
    = f.text_field :time
  .field
    = f.label :'proctor 1'
    = f.text_field :proctor1
  .field
    = f.label :'proctor 2'
    = f.text_field :proctor2
  .actions
    = f.submit 'Save'
